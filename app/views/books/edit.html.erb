<h1>Editing Book</h1>
<% if flash[:notice] %>
    <div class="flash">
    <%= flash[:notice] %>
    </div>
    <% end %>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
    <h5>Title</h5>
    <%= f.text_field :title %>
    <h5>Body</h5>
    <%= f.text_area :body %>
    <p><%= f.submit "Update Book" %></p>
<% end %>
<br>
    <%= link_to "Show",book_path %> |
    <%= link_to "Back",books_path %>